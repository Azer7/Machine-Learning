<Window x:Name="PigWindow" x:Class="Genetic_Pig_Trainer.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Genetic_Pig_Trainer"
        mc:Ignorable="d"
        Title="Pig Trainer" Height="450" Width="800">
    <Grid>
        <Button x:Name="toggleStartBtn" Content="Run" HorizontalAlignment="Left" Margin="340,295,0,0" VerticalAlignment="Top" Width="85" Height="45" Click="ToggleStartBtn_Click"/>
        <Label x:Name="CountLbl" Content="Game: 0" HorizontalAlignment="Left" Margin="365,120,0,0" VerticalAlignment="Top"/>
        <Label x:Name="FitLbl" Content="Max Fitness: " HorizontalAlignment="Left" Margin="325,179,0,0" VerticalAlignment="Top"/>
        <Label x:Name="GenLbl" Content="Gen: 0" HorizontalAlignment="Left" Margin="365,151,0,0" VerticalAlignment="Top"/>
        <Button x:Name="saveBtn" Content="Save Player" HorizontalAlignment="Left" Margin="100,340,0,0" VerticalAlignment="Top" Width="75" Click="SaveBtn_Click"/>
        <Button x:Name="BaselineBtn" Content="Test Fitness" HorizontalAlignment="Left" Margin="605,345,0,0" VerticalAlignment="Top" Width="75" Click="BaselineBtn_Click"/>
        <Label x:Name="baseLbl" Content="Base Fitness: 0" HorizontalAlignment="Left" Margin="594,305,0,0" VerticalAlignment="Top"/>
        <ComboBox x:Name="trainBox" HorizontalAlignment="Left" Margin="35,73,0,0" VerticalAlignment="Top" Width="120" IsDropDownOpen="True" SelectionChanged="TrainBox_SelectionChanged" SelectedIndex="0">
            <ComboBoxItem Content="Extensive" HorizontalAlignment="Left" Width="117.714285714286"/>
            <ComboBoxItem Content="Only Win" HorizontalAlignment="Left" Width="117.714285714286"/>
        </ComboBox>
    </Grid>
</Window>
